<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rocker_bogie_rover">

  <!-- Properties for reuse -->
  <xacro:property name="wheel_radius" value="0.07"/>
  <xacro:property name="wheel_length" value="0.04"/>
  <xacro:property name="chassis_size" value="0.334 0.254 0.115"/>
  <xacro:property name="wheel_color" value="0.3 0.3 0.3 1"/>
  <xacro:property name="blue_color" value="0 1 1 1"/>
  <xacro:property name="orange_color" value="1 0.5 0 1"/>

  <!-- Base Link at the Center of the Chassis -->
  <link name="base_link">
    <visual>
      <geometry><sphere radius="0.01"/></geometry>
      <origin xyz="0 0 0"/>
      <material name="gray"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
  </link>

  <!-- Macro for Chassis -->
  <xacro:macro name="chassis">
    <link name="chassis">
      <visual><geometry><box size="${chassis_size}"/></geometry><material name="green"><color rgba="0 1 0 1"/></material></visual>
      <collision><geometry><box size="${chassis_size}"/></geometry></collision>
      <inertial><mass value="5.3"/><origin xyz="0 0 0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.2"/></inertial>
    </link>
  </xacro:macro>

  <!-- Macro for Cylinder Connector -->
  <xacro:macro name="cylinder_connector" params="name position_y">
    <link name="${name}">
      <visual><geometry><cylinder radius="0.0075" length="0.03"/></geometry><origin xyz="0 ${position_y} 0" rpy="1.5707 0 0"/><material name="gray"><color rgba="0.5 0.5 0.5 1"/></material></visual>
      <collision><geometry><cylinder radius="0.0075" length="0.028"/></geometry></collision>
      <inertial><mass value="0.5"/><origin xyz="0 ${position_y} 0"/><inertia ixx="0.00005" iyy="0.00005" izz="0.0001"/></inertial>
    </link>
  </xacro:macro>

  <!-- Macro for Rocker Arms -->
  <xacro:macro name="rocker_arm" params="name position_y">
    <link name="${name}">
      <visual><geometry><box size="0.32 0.024 0.024"/></geometry><origin xyz="-0.147 ${position_y} 0"/><material name="blue"><color rgba="${blue_color}"/></material></visual>
      <visual><geometry><box size="0.024 0.024 0.186"/></geometry><origin xyz="-0.294 ${position_y} -0.1"/><material name="blue"><color rgba="${blue_color}"/></material></visual>
      <visual><geometry><box size="0.024 0.024 0.12"/></geometry><origin xyz="0.055 ${position_y} -0.055" rpy="0 -0.61 0"/><material name="blue"><color rgba="${blue_color}"/></material></visual>

      <collision><geometry><box size="0.32 0.024 0.024"/></geometry><origin xyz="-0.147 ${position_y} 0"/></collision>
      <collision><geometry><box size="0.024 0.024 0.186"/></geometry><origin xyz="-0.294 ${position_y} -0.1"/></collision>
      <collision><geometry><box size="0.024 0.024 0.12"/></geometry><origin xyz="0.055 ${position_y} -0.055" rpy="0 -0.61 0"/></collision>

      <inertial><mass value="0.25"/><origin xyz="-0.15 ${position_y} 0"/><inertia ixx="0.005" iyy="0.006" izz="0.007"/></inertial>
    </link>
  </xacro:macro>

  <!-- Macro for Bogie Arms -->
  <xacro:macro name="bogie_arm" params="name position_y">
    <link name="${name}">
      <visual><geometry><box size="0.07 0.024 0.024"/></geometry><origin xyz="0.177 ${position_y} 0.1"/><material name="orange"><color rgba="${orange_color}"/></material></visual>
      <visual><geometry><box size="0.024 0.024 0.162"/></geometry><origin xyz="0.2 ${position_y} 0.01"/><material name="orange"><color rgba="${orange_color}"/></material></visual>
      <visual><geometry><box size="0.024 0.024 0.323"/></geometry><origin xyz="0.01 ${position_y} 0.01" rpy="0 0.96 0"/><material name="orange"><color rgba="${orange_color}"/></material></visual>

      <collision><geometry><box size="0.07 0.024 0.024"/></geometry><origin xyz="0.177 ${position_y} 0.1"/></collision>
      <collision><geometry><box size="0.024 0.024 0.162"/></geometry><origin xyz="0.2 ${position_y} 0.01"/></collision>
      <collision><geometry><box size="0.024 0.024 0.323"/></geometry><origin xyz="0.01 ${position_y} 0.01" rpy="0 0.96 0"/></collision>

      <inertial><mass value="0.4"/><inertia ixx="0.004" iyy="0.004" izz="0.008"/></inertial>
    </link>
  </xacro:macro>

  <!-- Create Links -->
  <xacro:chassis/>
  <xacro:rocker_arm name="rocker_left" position_y="0"/>
  <xacro:rocker_arm name="rocker_right" position_y="0"/>
  <xacro:bogie_arm name="bogie_left" position_y="0"/>
  <xacro:bogie_arm name="bogie_right" position_y="0"/>
  <xacro:cylinder_connector name="cylinder_connector_left" position_y="0.145"/>
  <xacro:cylinder_connector name="cylinder_connector_right" position_y="-0.145"/>

  <!-- MACRO: Fixed Joints -->
  <xacro:macro name="fixed_joint" params="joint_name parent_link child_link origin_z">
    <joint name="${joint_name}" type="fixed"><parent link="${parent_link}"/><child link="${child_link}"/><origin xyz="0 0 ${origin_z}"/></joint>
  </xacro:macro>

  <!-- Create Fixed Joints -->
  <xacro:fixed_joint joint_name="base_to_chassis" parent_link="base_link" child_link="chassis" origin_z="0"/>
  <xacro:fixed_joint joint_name="joint_chassis_to_cylinder_left" parent_link="chassis" child_link="cylinder_connector_left" origin_z="0"/>
  <xacro:fixed_joint joint_name="joint_chassis_to_cylinder_right" parent_link="chassis" child_link="cylinder_connector_right" origin_z="0"/>

  <!-- MACRO: Revolute Joints -->
  <xacro:macro name="revolute_joint" params="joint_name parent_link child_link origin_x origin_y origin_z">
    <joint name="${joint_name}" type="revolute">
      <parent link="${parent_link}"/>
      <child link="${child_link}"/>
      <origin xyz="${origin_x} ${origin_y} ${origin_z}"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.26" upper="0.26" velocity="100" effort="100"/>
      <dynamics damping="0.5" spring_stiffness="50"/>
      <gazebo><spring_reference>0.0</spring_reference><spring_stiffness>50.0</spring_stiffness><damping>0.5</damping></gazebo>
    </joint>
  </xacro:macro>

  <!-- Create Revolute Joints -->
  <xacro:revolute_joint joint_name="joint_cylinder_left_to_rocker_left" parent_link="cylinder_connector_left" child_link="rocker_left" origin_x="0" origin_y="0.165" origin_z="0"/>
  <xacro:revolute_joint joint_name="joint_cylinder_left_to_rocker_right" parent_link="cylinder_connector_right" child_link="rocker_right" origin_x="0" origin_y="-0.165" origin_z="0"/>
  <xacro:revolute_joint joint_name="joint_rocker_to_bogie_left" parent_link="rocker_left" child_link="bogie_left" origin_x="0.1" origin_y="0" origin_z="-0.1"/>
  <xacro:revolute_joint joint_name="joint_rocker_to_bogie_right" parent_link="rocker_right" child_link="bogie_right" origin_x="0.1" origin_y="0" origin_z="-0.1"/>

  <!-- Macro: Wheels -->
  <xacro:macro name="wheel" params="name">
    <link name="${name}">
      <visual><geometry><cylinder radius="${wheel_radius}" length="${wheel_length}"/></geometry><origin rpy="1.5707 0 0"/><material name="gray"><color rgba="${wheel_color}"/></material></visual>
      <collision><geometry><cylinder radius="${wheel_radius}" length="${wheel_length}"/></geometry></collision>
      <inertial><mass value="4"/><inertia ixx="0.0005" iyy="0.0005" izz="0.001"/></inertial>
    </link>
  </xacro:macro>

  <!-- MACRO: Wheel Joints -->
  <xacro:macro name="wheel_joint" params="wheel_name parent_link origin_x origin_y origin_z">
    <joint name="joint_${wheel_name}" type="continuous">
      <parent link="${parent_link}"/>
      <child link="${wheel_name}"/>
      <origin xyz="${origin_x} ${origin_y} ${origin_z}"/>
      <axis xyz="0 1 0"/>
      <gazebo><mu1>2.0</mu1><mu2>2.0</mu2></gazebo>
    </joint>
  </xacro:macro>

  <!-- Create Wheel Links and Joints -->
  <xacro:wheel name="wheel_front_left"/>
  <xacro:wheel name="wheel_middle_left"/>  
  <xacro:wheel name="wheel_back_left"/>
  <xacro:wheel name="wheel_front_right"/>
  <xacro:wheel name="wheel_middle_right"/>  
  <xacro:wheel name="wheel_back_right"/>
  
  <xacro:wheel_joint wheel_name="wheel_front_left" parent_link="bogie_left" origin_x="0.2" origin_y="0.03" origin_z="-0.07"/>
  <xacro:wheel_joint wheel_name="wheel_middle_left" parent_link="bogie_left" origin_x="-0.12" origin_y="0.03" origin_z="-0.07"/>
  <xacro:wheel_joint wheel_name="wheel_back_left" parent_link="rocker_left" origin_x="-0.3" origin_y="0.03" origin_z="-0.17"/>
  <xacro:wheel_joint wheel_name="wheel_front_right" parent_link="bogie_right" origin_x="0.2" origin_y="-0.03" origin_z="-0.07"/>
  <xacro:wheel_joint wheel_name="wheel_middle_right" parent_link="bogie_right" origin_x="-0.12" origin_y="-0.03" origin_z="-0.07"/>
  <xacro:wheel_joint wheel_name="wheel_back_right" parent_link="rocker_right" origin_x="-0.3" origin_y="-0.03" origin_z="-0.17"/>

  <!-- Skid Steering Plugin -->
  <gazebo>
    <plugin name="skid_steering_plugin" filename="libskid_steering_plugin.so">
      <left_joint>joint_wheel_front_left</left_joint>
      <left_joint>joint_wheel_middle_left</left_joint>
      <left_joint>joint_wheel_back_left</left_joint>
      <right_joint>joint_wheel_front_right</right_joint>
      <right_joint>joint_wheel_middle_right</right_joint>
      <right_joint>joint_wheel_back_right</right_joint>
    </plugin>
  </gazebo>

</robot>
