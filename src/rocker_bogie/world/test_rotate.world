<?xml version="1.0"?>
<sdf version="1.6">
  <world name="circular_test_world">
    <!-- Add lighting -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Point light at the center -->
    <light type="point" name="center_light">
      <pose>0 0 1 0 0 0</pose> <!-- Positioned 1m above the center -->
      <diffuse>1 1 1 1</diffuse> <!-- White light -->
      <specular>0.5 0.5 0.5 1</specular>
      <attenuation>
        <range>10</range> <!-- Range of the light -->
        <constant>0.5</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <cast_shadows>true</cast_shadows>
    </light>

    <!-- Circular floor -->
    <model name="circular_floor">
      <static>true</static>
      <link name="floor_link">
        <visual name="circular_floor_visual">
          <geometry>
            <cylinder>
              <radius>5</radius> <!-- Radius of the circular floor -->
              <length>0.01</length> <!-- Thin floor -->
            </cylinder>
          </geometry>
          <material>
            <ambient>1 1 1 1</ambient> <!-- White color -->
          </material>
        </visual>
        <collision name="circular_floor_collision">
          <geometry>
            <cylinder>
              <radius>5</radius>
              <length>0.01</length>
            </cylinder>
          </geometry>
        </collision>
      </link>
    </model>

